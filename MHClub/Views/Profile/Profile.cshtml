@using MHClub.Domain.Models
@using MHClub.Models.Ads
@using MHClub.Utils
@model MHClub.Models.User.UserProfileDto

@{
    Layout = "_ProfileLayout";
    ViewData["Title"] = "Просмотр профиля";
}

<div class="d-flex flex-column gap-1">
    <div>
        <h4>Активные объявления</h4>
        @if ((List<AdsIndexViewModel>)ViewBag.Ads is not null)
        {
            ViewBag.ColumnsCount = 3;
            @await Html.PartialAsync("_AdsPartialView", (List<AdsIndexViewModel>)ViewBag.Ads)
        }
        else
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Загрузка...</span>
                </div>
            </div>
        }
    </div>
    
    <div>
        <h4>Отзывы</h4>
        @if (ViewBag.Reviews is not null)
        {
            @await Html.PartialAsync("_ReviewsPartialView", (List<Review>)ViewBag.Reviews)
        }
        else
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Загрузка...</span>
                </div>
            </div>
        }
    </div>
</div>