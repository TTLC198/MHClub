@using MHClub.Domain.Models
@model UserProfileDto

<div class="container">
    <div class="row">
        <div class="col">
            <h4>@Model.Name</h4>
            <div>
                <p>Рейтинг: @Model.Rating</p>
                <p>Отзывы: @Model.ReviewsCount</p>
                <p>Кол-во объявлений: @Model.AdsCount</p>
                <p>Зарегистрирован: @Model.DateOfRegistration</p>
                <p>Скрыть телефон</p>
            </div>
            <div>
                <button
                    onclick="location.href='@Url.Action("Logout", "Auth")';"
                    class="layout-button">
                    Выйти
                </button>
                <button
                    onclick="location.href='@Url.Action("Logout", "Auth")';"
                    class="layout-button">
                    Редактировать
                </button>
                <button
                    onclick="location.href='@Url.Action("Logout", "Auth")';"
                    class="layout-button">
                    Показать архивные объявления
                </button>
            </div>
        </div>
        <div class="col">
            <div class="scrollable-container">
                @if (ViewBag.Ads != null)
                {
                    <div class="row row-cols-1 row-cols-md-2">
                        @foreach (Ad ad in ViewBag.Ads)
                        {
                            <div class="col-md-4">
                                <div class="card h-100" style="width: 18rem;">
                                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR5xJj2eY0CRT5Wkf-XklUtNd2t2dtJVivThA&s" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">@ad.Name </h5>
                                        <p class="card-text">@ad.Description</p>
                                        <a href="#" @*todo href*@ class="btn btn-primary">@ad.Cost</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
            <div class="scrollable-container">

            </div>
        </div>
    </div>
</div>