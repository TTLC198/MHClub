<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MHClub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.iconify.design/3/3.2.0/iconify.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bagel+Fat+One&family=Manrope:wght@400;600&display=swap"
          rel="stylesheet">

    <style>
        body {
            font-family: 'Manrope', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-family: 'Bagel Fat One', cursive;
            font-size: 28px;
            color: #000;
        }

        .catalog-button, .post-button {
            background-color: #000;
            color: #fff;
            font-weight: 600;
            padding: 8px 16px;
            border-radius: 8px;
            border: none;
            transition: background-color 0.3s;
            display: flex;
            align-items: center;
        }

        .catalog-button i {
            margin-right: 8px;
        }

        .catalog-button:hover, .post-button:hover {
            background-color: #333;
        }

        .search-bar {
            flex-grow: 1;
            max-width: 400px;
            margin: 0 20px;
            border-radius: 8px;
            background-color: #f8f9fa;
            border: 1px solid #ccc;
            padding: 8px 16px;
            display: flex;
            align-items: center;
        }

        .search-input {
            flex-grow: 1;
            border: none;
            outline: none;
            font-size: 16px;
            margin-right: 8px;
        }

        .nav-link {
            color: #000;
            margin-left: 16px;
            display: flex;
            flex-direction: column;
            align-items: center;
            font-weight: 600;
            text-align: center;
        }

        .nav-link i {
            margin-bottom: 4px;
        }
    </style>
</head>
<body class="d-flex flex-column h-100">
<header>
    <nav class="navbar">
        <div class="container d-flex align-items-center" style="max-width: 1200px;">
            <a class="navbar-brand" href="/">MH CLUB</a>
            <button class="catalog-button me-4">
                <span class="iconify" data-icon="mdi:view-grid-outline" style="font-size: 20px;"></span> Каталог
            </button>
            <div class="search-bar">
                <input type="text" class="search-input" placeholder="Поиск">
                <span class="iconify" data-icon="mdi:magnify" style="font-size: 20px;"></span>
            </div>
            <a href="/favorites" class="nav-link">
                <span class="iconify" data-icon="mdi:heart-outline" style="font-size: 20px;"></span> Избранное
            </a>
            <a href="/profile" class="nav-link">
                <span class="iconify" data-icon="mdi:account-circle-outline" style="font-size: 20px;"></span> Екатерина
            </a>
            <button class="post-button ms-4">Разместить</button>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted mt-auto">
    <div class="container">
        <p class="text-center text-body-secondary">© 2025 MHClub</p>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>