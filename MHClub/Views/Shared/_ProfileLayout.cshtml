@using MHClub.Utils
@model MHClub.Models.User.UserProfileDto

@{
Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-between">
        <div class="col-md-auto">
            <div class="d-flex justify-content-center">
                <label class="custom-file-upload">
                    <div id="img_container">
                        <div class="ratio ratio-1x1 rounded-circle overflow-hidden" style="width: 200px; height: 200px;">
                            <img id="profile-image" src="@Url.Action("Get", "Media", new { path = Model.ImageUrl.GetLocalPath() })" class="card-img-top img-cover" alt="avatar">
                        </div>
                    </div>
                </label>
            </div>
            <h4>@Model.Name</h4>
            <div>
                <p>Рейтинг: @Model.Rating</p>
                <p>Отзывы: <a href="@Url.Action("Reviews")">@Model.ReviewsCount</a></p>
                <p>Кол-во объявлений: <a href="@Url.Action("Ads")">@Model.AdsCount</a></p>
                <p>Зарегистрирован: @Model.DateOfRegistration</p>
                <p>Скрыть телефон</p>
            </div>
            <div>
                <button
                    onclick="location.href='@Url.Action("Logout", "Auth")';"
                    class="layout-button">
                    Выйти
                </button>
                <button
                    onclick="location.href='@Url.Action("Edit", "Profile")';"
                    class="layout-button">
                    Редактировать
                </button>
                <button
                    onclick="location.href='@Url.Action("ArchivedAds", "Profile")';"
                    class="layout-button">
                    Показать архивные объявления
                </button>
            </div>
        </div>
        <div class="col-md-8 justify-content-center">
            @RenderBody()
        </div>
    </div>
</div>