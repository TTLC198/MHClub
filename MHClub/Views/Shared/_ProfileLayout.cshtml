@using MHClub.Domain.Models
@model UserProfileDto

@{
Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-between">
        <div class="col-md-auto">
            <h4>@Model.Name</h4>
            <div>
                <p>Рейтинг: @Model.Rating</p>
                <p>Отзывы: <a href="@Url.Action("Reviews")">@Model.ReviewsCount</a></p>
                <p>Кол-во объявлений: <a href="@Url.Action("Ads")">@Model.AdsCount</a></p>
                <p>Зарегистрирован: @Model.DateOfRegistration</p>
                <p>Скрыть телефон</p>
            </div>
            <div>
                <button
                    onclick="location.href='@Url.Action("Logout", "Auth")';"
                    class="layout-button">
                    Выйти
                </button>
                <button
                    onclick="location.href='@Url.Action("Logout", "Auth")';"
                    class="layout-button">
                    Редактировать
                </button>
                <button
                    onclick="location.href='@Url.Action("Logout", "Auth")';"
                    class="layout-button">
                    Показать архивные объявления
                </button>
            </div>
        </div>
        <div class="col-md-8 justify-content-center">
            @RenderBody()
        </div>
    </div>
</div>