@model MHClub.Models.User.UserRegisterDto
@{
    Layout = "_Layout";
    ViewData["Title"] = "Регистрация";
}

<div class="d-flex flex-column justify-content-center align-items-center vh-100">
    <div class="card p-4 rounded-3 shadow-sm" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4">Регистрация</h2>

        <form asp-action="Register" method="post" class="px-2">
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name"
                       type="text"
                       class="form-control bg-light border-0 rounded-2 p-3"
                       placeholder="Введите имя" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email"
                       type="email"
                       class="form-control bg-light border-0 rounded-2 p-3"
                       placeholder="Введите почту" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone"
                       type="text"
                       class="form-control bg-light border-0 rounded-2 p-3"
                       placeholder="Введите телефон" />
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password"
                       type="password"
                       class="form-control bg-light border-0 rounded-2 p-3"
                       placeholder="Введите пароль" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="RepeatPassword" class="form-label">Repeat Password</label>
                <input asp-for="RepeatPassword"
                       type="password"
                       class="form-control bg-light border-0 rounded-2 p-3"
                       placeholder="Повторите пароль" />
                <span asp-validation-for="RepeatPassword" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit"
                        class="btn btn-outline-dark rounded-2 flex-grow-1">
                    Зарегистрироваться
                </button>
                <a href="@Url.Action("Login", "Auth")"
                   class="btn btn-dark rounded-2 flex-grow-1">
                    Уже есть аккаунт?
                </a>
            </div>
        </form>
    </div>
</div>
